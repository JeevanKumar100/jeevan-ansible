- name: Create and manage S3 bucket
  hosts: all
  connection: local
  gather_facts: no

  collections:
    - amazon.aws

  vars:
    aws_cess_key:
    aws_cret_key:
    aws_region: us-east-2
    bucket_name: my-ansible-demo-jeevan

  tasks:
    - name: Create S3 bucket (no ACL)
      amazon.aws.s3_bucket:
        name: "{{ bucket_name }}"
        state: present
        region: "{{ aws_region }}"
        versioning: true
        tags:
          Environment: Dev
          ManagedBy: Ansible
        aws_cess_key: "{{ aws_ccess_key }}"
        aws_cret_key: "{{ aws_cret_key }}"
      run_once: true
