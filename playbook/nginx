- name: Setup Nginx as a Reverse Proxy
  hosts: all
  become: yes

  vars:
    app_port: 3000  # Backend app port
    nginx_proxy_file: /etc/nginx/sites-available/reverse-proxy

  tasks:
    - name: Install Nginx
      apt:
        name: nginx
        state: present
        update_cache: yes

    - name: Create Nginx reverse proxy config
      copy:
        dest: "{{ nginx_proxy_file }}"
        content: |
          server {
              listen 8080;
              server_name _;

              location / {
                  proxy_pass http://localhost:{{ app_port }};
                  proxy_http_version 1.1;
                  proxy_set_header Upgrade $http_upgrade;
                  proxy_set_header Connection 'upgrade';
                  proxy_set_header Host $host;
                  proxy_cache_bypass $http_upgrade;
              }
=======
- name: Setup Docker and run Nginx with Docker Compose
  hosts: all
  become: true

  vars:
    project_dir: /home/ubuntu/nginx-app
    compose_file: docker-compose.yml
    remote_user: ubuntu  # Change this to your actual remote user if needed

  tasks:

    - name: Install Docker
      apt:
        name: docker.io
        state: present
        update_cache: true

    - name: Install curl (required for downloading Compose)
      apt:
        name: curl
        state: present

    - name: Download Docker Compose binary
      get_url:
        url: https://github.com/docker/compose/releases/latest/download/docker-compose-linux-x86_64
        dest: /usr/local/bin/docker-compose
        mode: '0755'

    - name: Create symlink for docker-compose
      file:
        src: /usr/local/bin/docker-compose
        dest: /usr/bin/docker-compose
        state: link
        force: yes

    - name: Add user to docker group
      user:
        name: "{{ remote_user }}"
        groups: docker
        append: yes

    - name: Create project directory
      file:
        path: "{{ project_dir }}"
        state: directory
        owner: "{{ remote_user }}"
        group: "{{ remote_user }}"
        mode: '0755'

    - name: Copy Docker Compose file to remote host
      copy:
        src: files/docker-compose.yml
        dest: "{{ project_dir }}/docker-compose.yml"
        owner: "{{ remote_user }}"
        group: "{{ remote_user }}"
        mode: '0644'

    - name: Run Docker Compose
      command: docker-compose -f docker-compose.yml up -d
      args:
        chdir: "{{ project_dir }}"
